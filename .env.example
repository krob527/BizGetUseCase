PORT=3000

# Optional: Azure Key Vault secret hydration on startup
# If set, the app will try loading missing env vars from Key Vault using Azure credentials.
KEY_VAULT_URI=https://your-key-vault-name.vault.azure.net/

# Optional secret name overrides (defaults shown in comments):
# KV_SECRET_AZURE_OPENAI_API_KEY=azure-openai-api-key
# KV_SECRET_OPENAI_API_KEY=openai-api-key
# KV_SECRET_SMTP_PASS=smtp-pass
# KV_SECRET_SMTP_USER=smtp-user

# Option A: Azure OpenAI (recommended when using Azure)
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_DEPLOYMENT=your_chat_deployment_name
AZURE_OPENAI_API_VERSION=2024-10-21

# Option B: OpenAI (non-Azure)
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4.1-mini

SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
MAIL_FROM=BizGet AI Weekly <no-reply@yourdomain.com>

# Default: Every Monday at 9:00 AM server local time
NEWSLETTER_CRON=0 9 * * 1
